<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.tarc.secondhandcar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"></activity>

        <!-- add the parent activity name (go back to the parent) who is the parent)! -->
        <activity
            android:name=".ResetPwActivity"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".ViewProfileActivity"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".EditProfActivity"
            android:parentActivityName=".ViewProfileActivity"></activity>
        <activity
            android:name=".ChangePasswordActivity"
            android:parentActivityName=".ViewProfileActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".searchCarActivity" ></activity>
    </application>

</manifest>